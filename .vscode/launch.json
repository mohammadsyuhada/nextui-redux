            "osx": {
              "MIMode": "lldb"
            },
            "cwd": "${workspaceFolder}/workspace/all/clock/build/desktop",
            "program": "${workspaceFolder}/workspace/all/clock/build/desktop/clock.elf",
            "preLaunchTask": "make desktop",
